<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= typeof display !== 'undefined' ? display : title %></title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <style>
      :root {
        --mcd-red: #db0007;
        --mcd-yellow: #ffbc0d;
        --mcd-dark: #27251f;
      }
      body {
        background-color: #f5f5f5;
      }
      .navbar-mcd {
        background-color: var(--mcd-red);
      }
      .category-pill.active {
        background-color: var(--mcd-yellow) !important;
        color: var(--mcd-dark) !important;
        font-weight: bold;
      }
      .card-food:hover {
        transform: translateY(-5px);
        transition: transform 0.3s;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      }
      .btn-yellow {
        background-color: var(--mcd-yellow);
        color: var(--mcd-dark);
        font-weight: bold;
      }
      .btn-yellow:hover {
        background-color: #e6a800;
        color: var(--mcd-dark);
      }
      .btn-red {
        background-color: var(--mcd-red);
        color: white;
        font-weight: bold;
      }
      .btn-red:hover {
        background-color: #c10006;
        color: white;
      }
      .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <main>
      <div class="container">
        <div class="row mb-4">
          <div class="col-12">
            <div class="d-flex flex-nowrap overflow-auto py-2">
              <button class="btn category-pill active me-2" data-category="all">
                All Items
              </button>
              <button class="btn category-pill me-2" data-category="burgers">
                Burgers
              </button>
              <button class="btn category-pill me-2" data-category="desserts">
                Desserts
              </button>
              </button>
              <button class="btn category-pill me-2" data-category="drinks">
                Drinks
              </button>
              <button class="btn category-pill me-2" data-category="specials">
                Specials
              </button>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-8">
            <div class="row">
              <% items.forEach(item => { %>
              <div
                class="col-md-6 col-lg-4 mb-4 menu-item"
                data-category="<%= item.category.toLowerCase() %>"
              >
                <div class="card card-food h-100">
                  <div
                    class="badge bg-warning position-absolute m-2 top-0 end-0"
                  >
                    <%= item.category %>
                  </div>
                  <img
                    src="<%= item.image %>"
                    class="card-img-top "
                    alt="<%= item.item %>"
                  />
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= item.item %></h5>
                    <p class="card-text flex-grow-1"><%= item.description %></p>
                    <div
                      class="d-flex justify-content-between align-items-center mt-2"
                    >
                      <span class="fs-5 fw-bold"
                        >$<%= typeof item.price === 'number' ?
                        item.price.toFixed(2) :
                        parseFloat(item.price).toFixed(2) %></span
                      >
                      <button
                        class="btn btn-yellow add-to-cart"
                        data-id="<%= item.id %>"
                      >
                        <i class="bi bi-plus-circle me-1"></i>Add
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px">
              <div class="card-header bg-dark text-white">
                <h5 class="mb-0">
                  <i class="bi bi-cart3 me-2"></i>
                  Your Order
                </h5>
              </div>
              <div class="card-body">
                <div id="cart-items">
                  <p class="text-center text-muted">Your cart is empty</p>

                </div>
              </div>
              <div class="card-footer">
                <div class="d-flex justify-content-between mb-3">
                  <span>Subtotal:</span>
                  <span id="subtotal">€0.00</span>
                </div>
                <div class="d-flex justify-content-between fw-bold mb-3">
                  <span>Total:</span>
                  <span id="total">€0.00</span>
                </div>
                <button class="btn btn-red w-100 checkout-btn">
                  <i class="bi bi-bag-check me-2"></i>
                  Checkout Now
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="/scripts/order.js"></script>
  </body>
</html>
